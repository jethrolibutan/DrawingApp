<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/drawingCanvas"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="64dp">

        <Button
            android:id="@+id/drawRectangleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draw Rectangle"/>

        <Button
            android:id="@+id/drawCircleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draw Circle"/>

        <Button
            android:id="@+id/paintRectangleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paint Rectangle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/paintCircleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paint Circle"/>

        <Button
            android:id="@+id/eraseDrawingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erase Drawing"/>
    </LinearLayout>
</LinearLayout>
